<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap.min.css" />
    @*<link rel="stylesheet" type="text/css" href="~/Content/DataTables-1.10.18/DataTables-1.10.18/css/jquery.dataTables.css" />*@

    <link rel="stylesheet" type="text/css" href="~/Content/Admin/style.css">
    <!-- Datatable jquery script is must have -->



</head>
<body>
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <!--side menu-->
            <div class="col-md-2 col-sm-1 display-table-cell valign-top hidden-xs" id="side-menu">
                <h1 class="hidden-xs hidden-sm ">Navigation</h1>
                <ul>
                    <li class="link active">
                        <a href="/Admin/User/Index">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            <span class="hidden-sm hidden-xs">Users</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#collapse-post" data-toggle="collapse" aria-controls="collapse-post">
                            <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                            <span class="hidden-sm hidden-xs">Courses</span>
                        </a>
                        <ul class="collapse collapseable" id="collapse-post">
                            <li><a href="/Admin/Course/Index">Course List</a></li>
                            <li><a href="/Admin/Cartegory/Index">Course Category List</a></li>
                        </ul>
                    </li>
                    <li class="link">
                        <a href="#">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            <span class="hidden-sm hidden-xs">Comments</span>
                            <span class="label label-success pull-right" class="hidden-sm hidden-xs">10</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!--main content-->
            <div class="col-md-10 col-sm-11 display-table-cell valign-top">
                <div class="row">
                    <header id="nav-header" class="clearfix">
                        <div class="col-md-5">
                            <nav class="navbar-default pull-left">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu">
                                    <span class="sr-only">ToggleNavigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </nav>
                            <input type="text" class="hidden-sm hidden-xs" id="header-search-field" placeholder="Search...">
                        </div>
                        <div class="col-md-7">
                            <ul class="pull-right">
                                <li class="hidden-sm hidden-xs" id="welcome">Welcome, @Session["UserName"]</li>
                                <li class="fixed-width  ">
                                    <a href=#>
                                        <span class="glyphicon glyphicon-bell" aria-hidden="true"></span>
                                        <span class="label label-warning">1</span>
                                    </a>
                                </li>
                                <li class="fixed-width  ">
                                    <a href=#>
                                        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                                        <span class="label label-warning">2</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Login/Logout" class="logout">
                                        <span class="glyphicon glyphicon-log-out">Log out</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </header>
                </div>
                <div class="row">
                    @RenderBody()
                </div>
                <div id="containershow1"></div>
                <!--footer-->
                <div class="row">
                    <footer class="clear-fix" id="admin-footer">
                        <div class="pull-left"> &copy; 2019</div>
                        <div class="pull-right">Admin page</div>
                    </footer>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Content/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Content/Admin/default.js"></script>
    @*<script src="//cdn.ckeditor.com/4.11.4/basic/ckeditor.js"></script>*@
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap.min.js"></script>

</body>
</html>