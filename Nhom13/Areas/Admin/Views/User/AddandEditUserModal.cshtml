@{
    Layout = null;
    var obj = ViewData["Obj"] as Model.EF.User;
    var mode = ViewData["Mode"];
}


<div id="AddandEditUserModal" class="modal fade">
    <div class="modal-dialog modal-lg" id="m1">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><b>Thông tin người dùng</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="frmAddEdit">
                    <input type="hidden" name="mode" id="mode" value="@ViewData["Mode"]" />
                    <div class="form-group">
                        <input class="form-control" id="iID" type="hidden" value="@obj.ID" >
                    </div>
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" class="form-control" id="iUserName" value="@obj.UserName">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="text" class="form-control" id="iPassword" value="@obj.Password">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="iName" value="@obj.Name">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" id="iEmail" value="@obj.Email">
                    </div>
                    <div class="form-group">
                        <label>Group</label>
                        <select id="iGroup">
                        </select>
                    </div>
            </form>

        </div>
            <div class="modal-footer">
                <button id="bt" type="button" class="btn btn-success" onclick="Save(@obj.ID)">Save</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
